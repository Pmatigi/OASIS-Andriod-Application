<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.screens.ui.home.SeatsActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btnProceed"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/rel_lay_header"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_125sdp"
                android:background="@drawable/gfradient_rectangle"
                android:paddingLeft="@dimen/_20sdp"
                android:paddingRight="@dimen/_20sdp"
                android:layout_marginLeft="-10dp"
                android:layout_marginRight="-10dp"
                android:orientation="vertical"
                android:layout_alignParentTop="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/lin_lay_back"
                        android:layout_width="70dp"
                        android:visibility="visible"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:scaleType="centerInside"
                            android:src="@drawable/arrow"
                            android:visibility="visible"
                            android:layout_gravity="center_vertical"
                            android:layout_centerVertical="true" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_18sdp"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="normal"
                        android:text="Seats"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_bus_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_16sdp"
                            android:fontFamily="sans-serif-medium"
                            android:textStyle="normal"
                            android:text="Asian Express"
                            android:textColor="@color/white"
                            />
                        <TextView
                            android:id="@+id/bus_route"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_14sdp"
                            android:fontFamily="sans-serif-medium"
                            android:textStyle="normal"
                            android:text="Banglore to Chennai"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textColor="@color/white"
                            />
                        <TextView
                            android:id="@+id/tv_booking_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_14sdp"
                            android:fontFamily="sans-serif-medium"
                            android:textStyle="normal"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:text="Booking date: 25/03/2020"
                            android:textColor="@color/white"
                            />
                </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_view_photo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_14sdp"
                            android:paddingTop="@dimen/_2sdp"
                            android:paddingBottom="@dimen/_2sdp"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:fontFamily="sans-serif-medium"
                            android:textStyle="normal"
                            android:background="@drawable/rounded_white"
                            android:text="View Photos"
                            android:gravity="center"
                            android:textColor="@color/blue"
                            />


                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_14sdp"
                            android:fontFamily="sans-serif-medium"
                            android:textStyle="normal"
                            android:text="Rs 200"
                            android:layout_gravity="right"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:textColor="@color/white"
                            />
                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/tv_price_complete"
                    android:layout_marginRight="@dimen/_10sdp">
    <!--                <TextView-->
    <!--                    android:layout_width="wrap_content"-->
    <!--                    android:layout_height="wrap_content"-->
    <!--                    android:textSize="@dimen/_14sdp"-->
    <!--                    android:fontFamily="sans-serif-small"-->
    <!--                    android:textStyle="normal"-->
    <!--                    android:text="Selected Seats : "-->
    <!--                    android:textColor="@color/black_colour_ios"-->
    <!--                    />-->
                    <TextView
                        android:id="@+id/tv_seats"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_14sdp"
                        android:fontFamily="sans-serif-small"
                        android:textStyle="normal"
                        android:text="Selected Seats :"
                        android:layout_gravity="center"
                        android:lines="2"
                        android:scrollbars="vertical"
                        android:textColor="@color/black_colour_ios"
                        />

            </LinearLayout>
                <TextView
                    android:id="@+id/tv_price_complete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_14sdp"
                    android:fontFamily="sans-serif-small"
                    android:textStyle="normal"
                    android:layout_alignParentRight="true"
                    android:text="(X2: Rs 0)"
                    android:textColor="@color/black_colour_ios"
                    />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/lin_lay_bus_type"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/rounded_dark_grey"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_lower_seat"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_14sdp"
                    android:fontFamily="sans-serif-small"
                    android:gravity="center"
                    android:background="@drawable/less_rounded_blue"
                    android:text="Lower"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:id="@+id/tv_upper_seat"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_14sdp"
                    android:fontFamily="sans-serif-small"
                    android:gravity="center"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="Upper"
                    android:textColor="@color/black_colour_ios"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lin_lay_seat_type"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:visibility="gone"
                android:background="@drawable/rounded_dark_grey"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_seating_seat"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_14sdp"
                    android:fontFamily="sans-serif-small"
                    android:gravity="center"
                    android:background="@drawable/less_rounded_blue"
                    android:text="Seater"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:id="@+id/tv_sleeper_seat"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_14sdp"
                    android:fontFamily="sans-serif-small"
                    android:gravity="center"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="Sleeper"
                    android:textColor="@color/black_colour_ios"
                    />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp">
                <RelativeLayout
                    android:id="@+id/rel_lay_seat_avail_lower"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp"
                    android:visibility="visible"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/_50sdp"
                    android:layout_marginRight="@dimen/_50sdp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_gravity="right"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:src="@drawable/available"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/_14sdp"
                            android:fontFamily="sans-serif-small"
                            android:textStyle="normal"
                            android:gravity="center"
                            android:layout_alignParentLeft="true"
                            android:text="Available"
                            android:textColor="@color/black_colour_ios"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_gravity="right"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:src="@drawable/not_available_seats"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/_14sdp"
                            android:fontFamily="sans-serif-small"
                            android:textStyle="normal"
                            android:gravity="center"
                            android:layout_alignParentLeft="true"
                            android:text="Booked"
                            android:textColor="@color/black_colour_ios"
                            />
                </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rel_lay_seat_avail_upper"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/_50sdp"
                    android:visibility="gone"
                    android:layout_marginRight="@dimen/_50sdp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:src="@drawable/upper_seat"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/_14sdp"
                            android:fontFamily="sans-serif-small"
                            android:textStyle="normal"
                            android:gravity="center"
                            android:layout_alignParentLeft="true"
                            android:text="Available"
                            android:textColor="@color/black_colour_ios"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:src="@drawable/upper_seat_selected"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/_14sdp"
                            android:fontFamily="sans-serif-small"
                            android:textStyle="normal"
                            android:gravity="center"
                            android:layout_alignParentLeft="true"
                            android:text="Booked"
                            android:textColor="@color/black_colour_ios"
                            />
                </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="@drawable/grey_rounded_transparent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_gravity="right"
                    android:layout_margin="@dimen/_7sdp"
                    android:src="@drawable/steering" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rec_view_normal_seat_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="vertical"
                        android:visibility="visible"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_15sdp"/>

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/btnProceed"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:text="Proceed"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_5sdp"

            android:textColor="@color/white"
            android:background="@drawable/proceed_button"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rel_lay_boarding_dropping"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha=".4"
            android:background="@color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:visibility="visible"
            android:background="@color/white">
            <ImageView
                android:id="@+id/iv_hide_img_boarding"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_28sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:src="@drawable/cross_popup"
                android:scaleType="centerInside"
                android:tint="@color/blue"
                android:layout_marginLeft="@dimen/_2sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_alignParentTop="true">
                <LinearLayout
                    android:id="@+id/lin_lay_boarding"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_boarding_point"
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:text="BOARDING"
                        android:textColor="@color/blue"
                        android:textSize="14.7sp"
                        android:textStyle="normal" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_2sdp">
                        <View
                            android:id="@+id/view_grey_board"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_2sdp"
                            android:visibility="gone"
                            android:background="@color/grey"/>
                        <View
                            android:id="@+id/view_blue_board"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_2sdp"
                            android:visibility="visible"
                            android:background="@color/blue"/>

                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lin_lay_droping"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="40dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_dropping_point"
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:textSize="14.7sp"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="normal"
                        android:textColor="@color/grey"
                        android:gravity="center"
                        android:capitalize="characters"
                        android:text="DROPPING"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_2sdp">
                        <View
                            android:id="@+id/view_blue_dropping"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_2sdp"
                            android:visibility="gone"
                            android:layout_marginLeft="@dimen/_1sdp"
                            android:background="@color/blue"/>
                        <View
                            android:id="@+id/view_grey_dropping"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_2sdp"
                            android:visibility="visible"
                            android:layout_marginLeft="@dimen/_1sdp"
                            android:background="@color/grey"/>
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>
        <LinearLayout
            android:id="@+id/lin_lay_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_5sdp"
            android:background="#f4f3fa"
            android:paddingBottom="@dimen/_5sdp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:scaleType="fitCenter"
                    android:tint="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/icon_loc_new"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_gravity="center_vertical"
                android:layout_height="@dimen/_50sdp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_colour_ios"
                    android:text="Need help selecting a boarding point"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/_16sdp" />
                <TextView
                    android:id="@+id/tv_bus_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:text="Volvo AC multi Axcel Semi Sleeper"
                    android:textSize="@dimen/_13sdp" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_below="@+id/lin_lay_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/grey"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rec_view_boarding_point"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="vertical"
                android:visibility="visible" />
        <Button
            android:id="@+id/btn_procede_assenger_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="Proceed"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/white"
            android:background="@drawable/proceed_button"
            />

    </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rel_lay_image_gallery"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha=".4"
            android:background="@color/black"/>
        <LinearLayout
            android:id="@+id/lin_lay__img_gallery"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180sdp"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:visibility="visible"
            android:background="@color/white">
            <ImageView
                android:id="@+id/iv_hide_img_gallery"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_28sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:src="@drawable/cross_popup"
                android:scaleType="centerInside"
                android:tint="@color/blue"
                android:layout_marginLeft="@dimen/_2sdp"
                android:layout_above="@+id/lin_lay__img_gallery"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rec_view_img_gallery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:scrollbars="horizontal"
                android:layout_margin="@dimen/_5sdp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
