<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.8"
                android:background="@drawable/bus_ticket_gradient"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6.2"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">
            <LinearLayout
                android:id="@+id/lin_lay_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="OASIS"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_22sdp"
                     />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center_horizontal"
                    android:text="Select your journey route"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sdp"
                    />

            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rel_lay_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_below="@+id/lin_lay_top">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_130sdp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/box"
                    android:padding="@dimen/_7sdp"
                    android:paddingLeft="@dimen/_20sdp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:src="@drawable/start_point"
                            android:scaleType="fitCenter"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black_colour_ios"
                            android:text="From"
                            android:layout_marginTop="@dimen/_1sdp"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:textSize="@dimen/_13sdp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="@dimen/_10sdp"
                            android:gravity="center_horizontal"
                            android:layout_height="@dimen/_40sdp">
                            <View android:layout_width="@dimen/_1sdp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_horizontal"
                                android:background="@color/darkgrey"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/lin_lay_start_city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tv_start_city"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-ondensed"
                                android:paddingBottom="@dimen/_10sdp"
                                android:singleLine="true"
                                android:paddingLeft="@dimen/_15sdp"
                                android:textSize="@dimen/_14sdp"
                                android:text="Select city"
                                android:textColorHint="@color/grey"
                                android:textColor="@color/grey"
                                android:background="@color/transparent"
                                android:layout_marginTop="@dimen/_10sdp"
                                />

                            <View android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:background="@color/darkgrey"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:src="@drawable/destinbation"
                            android:scaleType="fitCenter"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black_colour_ios"
                            android:text="Destination"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:textSize="@dimen/_13sdp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/lin_lay_end_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_end_city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-ondensed"
                            android:paddingBottom="@dimen/_5sdp"
                            android:singleLine="true"
                            android:paddingLeft="@dimen/_25sdp"
                            android:textSize="@dimen/_14sdp"
                            android:text="Select city"
                            android:textColorHint="@color/grey"
                            android:textColor="@color/grey"
                            android:background="@color/transparent"
                            android:layout_marginTop="@dimen/_10sdp"
                            />
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:id="@+id/iv_city_reverse"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:src="@drawable/sort"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:layout_alignParentRight="true"
                    android:scaleType="fitCenter"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel_lay_card"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_15sdp">

                <TextView
                    android:id="@+id/tv_current_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:textColor="@color/black_colour_ios"
                    android:textSize="@dimen/_18sdp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_140sdp"
                    android:layout_below="@+id/rel_lay_card"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp">
                    <com.oasis.ui.horizontalpicker.HorizontalPicker
                        android:id="@+id/datePicker"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        tools:ignore="MissingConstraints" />
                 </LinearLayout>
            </LinearLayout>
            <Button
                android:id="@+id/btnSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="Search"
                android:layout_marginBottom="@dimen/_60sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/white"
                android:layout_alignParentBottom="true"
                android:background="@drawable/proceed_button"
                />

        </RelativeLayout>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>