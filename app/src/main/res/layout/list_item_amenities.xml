<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/_70sdp"
    android:paddingLeft="@dimen/_10sdp"
    android:paddingRight="@dimen/_10sdp"
    android:paddingBottom="@dimen/_5sdp">
                <LinearLayout
                    android:id="@+id/lin_lay_amenities"
                    android:layout_width="@dimen/_150sdp"
                    android:visibility="visible"
                    android:layout_height="match_parent"
                    android:paddingBottom="@dimen/_10sdp"
                    android:background="@drawable/rounded_white_grey_border"
                    android:paddingTop="@dimen/_10sdp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_amenities"
                        android:layout_width="0dp"
                        android:layout_weight="4.5"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/tv_icon"/>

                    <TextView
                        android:id="@+id/tv_amenities"
                        android:layout_width="0dp"
                        android:layout_weight="5.5"                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:textSize="@dimen/_18sdp"
                        android:textColor="@color/black_colour_ios"
                        android:lines="2"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:text="TV"/>
                </LinearLayout>

</RelativeLayout>