<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/_5sdp"
    android:paddingRight="@dimen/_5sdp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/lin_lay_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.8"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_bus_logo"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:scaleType="fitCenter"
                android:padding="@dimen/_2sdp"
                android:background="@drawable/bg_circle_grey"
                android:src="@drawable/bus_img2"/>
            <RelativeLayout
                android:id="@+id/rel_lay_rating"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:scaleType="fitCenter"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_15sdp"
                android:src="@drawable/icon_star"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="7.9"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_bus_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_colour_ios"
                android:text="Asian Express"
                android:singleLine="true"
                android:lines="1"
                android:textSize="@dimen/_15sdp" />
            <TextView
                android:id="@+id/tv_bus_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:text="Bus no. 4536"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_3sdp"
                android:textSize="@dimen/_11sdp" />
            <TextView
                android:id="@+id/tv_bus_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:text="4:30 AM - 6-30 AM  |  Availiable Seats: 50"
                android:layout_marginTop="@dimen/_3sdp"
                android:textStyle="bold"
                android:singleLine="true"
                android:lines="1"
                android:textSize="@dimen/_11sdp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_height="@dimen/_50sdp"
                android:layout_below="@+id/lin_lay_top"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/lin_lay_rating1"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true">
                <TextView
                    android:id="@+id/tv_rating"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_23sdp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:paddingLeft="@dimen/_7sdp"
                    android:paddingRight="@dimen/_7sdp"
                    android:textColor="@color/white"
                    android:text="4/5"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_12sdp"
                    android:background="@drawable/rounded_blue" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lin_lay_amenity"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true">
                <ImageView
                    android:id="@+id/iv_amenities"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/icon_amenity"
                    android:layout_gravity="center"
                    />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="Rs: 900"
                    android:layout_centerVertical="true"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    android:textSize="@dimen/_15sdp" />
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".3"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:src="@drawable/next"
                android:layout_gravity="center"
                android:scaleType="fitCenter"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_below="@+id/lin_lay_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/light_grey"/>

</RelativeLayout>