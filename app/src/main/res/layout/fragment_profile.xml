            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_50sdp">
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_10sdp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_90sdp">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/iv_prof_img"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_centerHorizontal="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_prof2"
                        android:background="@drawable/bg_circle_grey"/>
<!--                    <ImageView-->
<!--                        android:id="@+id/iv_prof_img"-->
<!--                        android:layout_width="95dp"-->
<!--                        android:layout_height="95dp"-->
<!--                        android:layout_centerHorizontal="true"-->
<!--                        android:layout_gravity="center_horizontal"-->
<!--                        android:scaleType="fitCenter"-->
<!--                        android:background="@drawable/bg_circle_grey"/>-->
                 <ImageView
                     android:layout_width="@dimen/_25sdp"
                     android:layout_height="@dimen/_25sdp"
                     android:layout_toRightOf="@+id/iv_prof_img"
                     android:layout_alignParentBottom="true"
                     android:src="@drawable/icon_camera2"
                     android:layout_marginLeft="-20sp"
                     android:layout_marginBottom="@dimen/_5sdp"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/darkgrey"
                    android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:textColor="@color/darkgrey"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="normal" />
                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/darkgrey"
                    android:textSize="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:textStyle="normal"/>
<!--        <View android:layout_width="match_parent"-->
<!--            android:layout_height="@dimen/_1sdp"-->
<!--            android:layout_marginTop="@dimen/_7sdp"-->
<!--            android:background="@color/darkgrey"/>-->
        <RelativeLayout
            android:id="@+id/rel_lay_my_booking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp">

            <TextView
                android:id="@+id/tv_my_booking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Booking"
                android:textColor="@color/light_black"
                android:textSize="@dimen/_16sdp"
                android:textStyle="normal" />
            <ImageView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/next" />

        </RelativeLayout>
<!--        <View android:layout_width="match_parent"-->
<!--            android:layout_height="@dimen/_1sdp"-->
<!--            android:layout_marginTop="@dimen/_5sdp"-->
<!--            android:background="@color/darkgrey"/>-->
        <RelativeLayout
            android:id="@+id/rel_lay_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:padding="@dimen/_3sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call Support"
                android:textColor="@color/light_black"
                android:textSize="@dimen/_16sdp"
                android:textStyle="normal" />
            <ImageView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/next" />

        </RelativeLayout>
        <View android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/light_grey"/>
        <RelativeLayout
            android:id="@+id/rel_lay_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:padding="@dimen/_3sdp">

            <TextView
                android:id="@+id/tv_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Setting"
                android:textColor="@color/light_black"
                android:textSize="@dimen/_16sdp"
                android:textStyle="normal" />
            <ImageView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/next" />

        </RelativeLayout>
<!--        <View android:layout_width="match_parent"-->
<!--            android:layout_height="@dimen/_1sdp"-->
<!--            android:layout_marginTop="@dimen/_5sdp"-->
<!--            android:background="@color/darkgrey"/>-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:padding="@dimen/_3sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Us"
                android:textColor="@color/light_black"
                android:textSize="@dimen/_16sdp"
                android:textStyle="normal" />
            <ImageView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/next" />

        </RelativeLayout>
            <View android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/light_grey"/>
        <RelativeLayout
            android:id="@+id/rel_lay_signout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:padding="@dimen/_3sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Out"
                android:textColor="@color/light_black"
                android:textSize="@dimen/_16sdp"
                android:textStyle="normal" />
            <ImageView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/next" />

        </RelativeLayout>
<!--        <View android:layout_width="match_parent"-->
<!--            android:layout_height="@dimen/_1sdp"-->
<!--            android:layout_marginTop="@dimen/_5sdp"-->
<!--            android:background="@color/darkgrey"/>-->


    </LinearLayout>
                <RelativeLayout
                    android:id="@+id/rel_lay_select_prof"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_alignParentBottom="true"
                    android:layout_height="match_parent">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha=".4"
                        android:background="@color/black"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentBottom="true">
                        <LinearLayout
                        android:id="@+id/lin_lay_select_prof"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                        android:background="@drawable/rounded_white_grey_border">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Choose Profile Picture"
                            android:gravity="center_horizontal"
                            android:textColor="@color/darkgrey"
                            android:textSize="@dimen/_14sdp"
                            android:paddingTop="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_10sdp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/black_colour_ios"/>

                        <TextView
                            android:id="@+id/tv_photo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Camera"
                            android:gravity="center"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/_18sdp"
                            android:padding="@dimen/_10sdp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/black_colour_ios"/>
                        <TextView
                            android:id="@+id/tv_gallery"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Photos"
                            android:gravity="center"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/_18sdp"
                            android:padding="@dimen/_10sdp"/>

                    </LinearLayout>
                        <TextView
                            android:id="@+id/tv_cancel"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Cancel"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:textColor="@color/blue"
                            android:background="@drawable/rounded_white_grey_border"
                            android:textSize="@dimen/_18sdp"
                            android:padding="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"/>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
<!--        </ScrollView>-->
    </LinearLayout>
</RelativeLayout>